@model LAB2_ED2.Models.PeopleModel

@{
    ViewData["Title"] = "AddPeople";
}

<body style="text-align:center">
    <h1 class="text-info">Ingreso de nueva información</h1>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="AddPeople">
                <div asp-validation-summary="ModelOnly" class="text-info"></div>
                <div class="form-group">
                    <label class="control-label text-info">Nombre</label>
                    <input asp-for="name" class="form-control" />
                    <span asp-validation-for="name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="dpi" class="control-label text-info"></label>
                    <input asp-for="dpi" class="form-control" />
                    <span asp-validation-for="dpi" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label text-info">Fecha de nacimiento</label>
                    <input asp-for="datebirth" class="form-control" />
                    <span asp-validation-for="datebirth" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label text-info">Dirección</label>
                    <input asp-for="address" class="form-control " />
                    <span asp-validation-for="address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label text-info">Companias</label>
                    <input asp-for="companies" class="form-control " />
                    <span asp-validation-for="companies" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Ingresar" class="btn btn-dark btn-outline-info" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-controller="PeopleM" asp-action="Index">Regresar a Inicio</a>
    </div>
</body>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}



