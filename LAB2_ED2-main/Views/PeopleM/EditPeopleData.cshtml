@model LAB2_ED2.Models.PeopleModel

@{
    ViewData["Title"] = "EditPeopleData";
}
<body style="text-align:center">
    <h1 class="text-info">Editar Información</h1>

    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-controller="PeopleM" asp-action="EditPeopleData">
                <div asp-validation-summary="ModelOnly" class="text-info"></div>
                <div class="form-group">
                    <label class="control-label text-info">Nombre</label>
                    <input asp-for="name" class="form-control" />
                    <span asp-validation-for="name" class="text-info"></span>
                </div>
                <div class="form-group" disabled>
                    <label asp-for="dpi" class="control-label text-info"></label>
                    <input asp-for="dpi" class="form-control" disabled />
                    <span asp-validation-for="dpi" class="text-info"></span>
                </div>
                <div class="form-group">
                    <label class="control-label text-info">Fecha de nacimiento</label>
                    <input asp-for="datebirth" class="form-control" />
                    <span asp-validation-for="datebirth" class="text-info"></span>
                </div>
                <div class="form-group">
                    <label class="control-label text-info">Dirección</label>
                    <input asp-for="address" class="form-control" />
                    <span asp-validation-for="address" class="text-info"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Guardar" class="btn btn-outline-info" />
                    <a class="button btn btn-outline-info" asp-controller="PeopleM" asp-action="Index">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</body>


<div>
    <a asp-controller="PeopleM" asp-action="Index">Regresar a Inicio</a>
</div>

