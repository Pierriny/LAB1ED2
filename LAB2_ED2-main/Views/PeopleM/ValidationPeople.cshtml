@model LAB2_ED2.Models.PeopleModel
@{
    ViewData["Title"] = "ValidacionPeople";
}

<html class="text-info">
<body class="text-info">
    <h4>VALIDACION del empleado</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="ValidationPeople">
                <div class="form-group">
                    <label>Contraseña: </label>
                    <label class="control-label text-info">Ingrese su Contraseña</label>
                    <input asp-for="name" class="form-control" />
                    <span asp-validation-for="name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Su DPI: </label>
                    <label class="control-label text-info">Ingrese su DPI</label>
                    <input asp-for="dpi" class="form-control" />
                    <span asp-validation-for="dpi" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Ingresar" class="btn btn-dark btn-outline-info" />
                </div>
            </form>
        </div>
    </div>
    <div>
        <a asp-controller="PeopleM" asp-action="Index">Regresar a Inicio</a>
    </div>
</body>
</html class="text-info">